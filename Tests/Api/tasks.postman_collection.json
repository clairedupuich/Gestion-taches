							"script": {
								"exec": [
									"// Vérifier le code de statut\r",
									"pm.test(\"Status is 200\", function() {\r",
									"  pm.response.to.have.status(200);\r",
									"});\r",
									"\r",
									"// Vérifier que c'est du JSON\r",
									"pm.test(\"Response is JSON\", function() {\r",
									"  pm.response.to.be.json;\r",
									"});\r",
									"\r",
									"pm.test(\"Response has correct structure\", function () {\r",
									"    const jsonData = pm.response.json();\r",
									"    pm.expect(jsonData).to.have.property('success', true);\r",
									"    pm.expect(jsonData).to.have.property('data').that.is.an('array');\r",
									"    pm.expect(jsonData).to.have.property('count').that.is.a('number');\r",
									"});\r",
									"\r",
									"pm.test(\"Each task has required fields\", function () {\r",
									"    const jsonData = pm.response.json();\r",
									"    jsonData.data.forEach(task => {\r",
									"        pm.expect(task).to.have.property('id').that.is.a('number');\r",
									"        pm.expect(task).to.have.property('title').that.is.a('string');\r",
									"        pm.expect(task).to.have.property('completed').that.is.a('boolean');\r",
									"        pm.expect(task).to.have.property('createdAt').that.is.a('string');\r",
									"        pm.expect(task).to.have.property('updatedAt').that.is.a('string');\r",
									"    });\r",
									"});"
								],
